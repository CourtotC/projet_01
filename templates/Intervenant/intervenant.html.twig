{% extends "base.html.twig" %}
{% block title %}gestion intervenants{% endblock %}
{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>
<img src="/public/images/intervenant/charlotteauxfraises.jpg" alt="test">

<div class="example-wraper">
    <h1>Gestion des intervenants</h1>
    {{ dump(intervenant_liste) }}

    <h2>{{sous_titre}}</h2>

    <ul>
        {% if (intervenant_liste is not empty) %}
        {% for i in intervenant_liste %}

        <li> <img src="/images/intervenant/{{i.getImageName}}" alt="{{i.getImageName}}"/>{{i.getNom()}}, {{i.getPrenom()}}, <strong>{{i.getSpecialiteprofessionnelle()}}</strong><a href="{{ path('intervenant_delete', {'value': i.getId() } ) }}"> Delete</a></li>
       
        <li> <img src="{{vich_uploader_asset( images,'imageName')}}" alt="{{i.getImageName}}"/>{{i.getNom()}}, {{i.getPrenom()}}, <strong>{{i.getSpecialiteprofessionnelle()}}</strong><a href="{{ path('intervenant_delete', {'value': i.getId() } ) }}"> Delete</a></li>

        {% endfor %}
        {% else %}
        <p>Pas d'intervenant</p>

        {% endif %}

    </ul>

</div>

<img src="/public/images/intervenant/charlotteauxfraises.jpg" alt="test">
{% endblock %}